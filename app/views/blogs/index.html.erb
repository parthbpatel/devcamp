<p id="notice"><%= notice %></p>
<center><h1>Blogs</h1></center><hr>

<% @blogs.each do |blog| %>
  <div class="blog-card">
    <h3><u><b><%= link_to blog.title, blog %></b></u></h3>
    <h5>Views: <%= blog.impressionist_count(filter: :ip_address) %></h5>
    <h5>Created at: <%= pretty_datetime(blog.created_at) %></h5>
    <h5>Blogger: <%= blog.user.email %></h5>

    <%= blog.content %><br><br>
    <%= link_to 'Show', blog, class: 'btn btn-primary' %> |
    <%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-primary' %> |
    <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
    <hr>
    <%= social_share_button_tag((blog.title), allow_sites: %w(twitter facebook)) %>
  </div>
<% end %>
